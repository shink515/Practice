 //平均点を48.7ではなく、小数第二位の切り捨てで48.6で表示

package shinzato;

public class Q_101
{
	public static void main(String args[])
	{
		int kokugo = 30;
		int sugaku = 90;
		int shakai = 26;
		
		int sum = kokugo + sugaku + shakai;    //合計値求める


		double avg = (double)sum / 3.0;      //平均を求める（今回のミス内容：最初から実数で平均を計算する）
												// avg = 48.666666666666664
		
		double avg2 = avg * 10.0;             //平均を10.0倍して格納する
											// avg2 = 486.66666666666663

		int avg3 = (int)avg2;              //整数に変換  実数を整数型へキャスト
											// avg3 = 486
		
		double avg4 = avg3 / 10.0;      //10で割って実数型に変換　　実数で割れば結果も実数になるのでキャストは必要なし
											// avg3 = 48.6
		
		System.out.println("合計:" + sum);
		System.out.println("平均:" + avg4);
	}
}
